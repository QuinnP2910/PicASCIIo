<%- include("partials/header"); -%>
<div class="container text-center">
    <div class="row">
        <div class="col">
            <img class="rounded img-fluid m-3" id="img-to-ascii" src=<%=imageSource%> alt="Please upload an image!!"></img>
            <br>
            <input class="form-control" type="file">
            <br>
            <button onclick="makeBlackAndWhite()" class="btn btn-light">Click to generate</button>
        </div>
        <div class="col">
        </div>
    </div>
    <div class="row p-3">
        <p class="fs-1" id="slider-width">20 characters wide</p>
        <input type="range" class="form-range mb-5" min="10" max="100" value="20" step="1.0" id="slider"></input>
        <textarea class="output-box" id="ascii-output" name="ascii-output" rows="<%=rows%>" cols="<%=cols%>"><%=output%></textarea>
        <canvas id="img-canvas"></canvas>
    </div>
</div>
<%- include("partials/footer"); -%>